@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}


<style>
    .bg-image {
        overflow: hidden;
        z-index: 1;
        backdrop-filter: blur(1px);
        -webkit-backdrop-filter: blur(1px); /* For Safari support */
    }

        .bg-image::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.3); /* Adjust opacity as needed */
            backdrop-filter: blur(1px);
            -webkit-backdrop-filter: blur(1px);
            z-index: -1;
        }

    .card {
        border: none;
        border-radius: 8px;
    }

    .form-control {
        border: 1px solid #dee2e6;
        padding: 0.5rem 1.0rem;
        font-size: 14px;
    }

        .form-control::placeholder {
            color: #adb5bd;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #0d6efd;
        }

    .btn-primary {
        padding: 0.5rem;
        font-size: 14px;
        font-weight: 500;
        background-color: #0d6efd;
    }

    .input-group-text {
        border-left: none;
        padding: 0.5rem 0.75rem;
    }

    .input-group .form-control {
        border-right: none;
    }

        .input-group .form-control:focus {
            border-right: none;
            box-shadow: none;
        }

            .input-group .form-control:focus + .input-group-text {
                border-color: #86b7fe;
            }

    html, body {
        margin: 0;
        padding: 0;
        overflow: hidden;
    }

    .container-fluid {
        width: 100vw;
        height: 100vh;
    }

    /* New styles for simplified design */
    .form-label {
        color: #212529;
        font-weight: 500;
    }

    .card-body {
        padding: 2rem !important;
    }

    .text-primary {
        color: #0d6efd !important;
    }

        .text-primary:hover {
            color: #0b5ed7 !important;
        }

    /* Style for back arrow button */
    .back-btn {
        position: absolute;
        top: 20px;
        left: 20px;
        background: transparent;
        border: none;
        color: #fff;
        font-size: 24px;
        cursor: pointer;
    }

        .back-btn:hover {
            color: #ddd;
        }
</style>

<div class="container-fluid p-0 min-vh-100 bg-image" style="background-image: url('/images/LoginPageBackground.jpeg'); background-size: cover; background-position: center; background-repeat: no-repeat; position: fixed; top: 0; left: 0; right: 0; bottom: 0;">
    <a class="back-btn" asp-area="" asp-page="/Index">
        <i class="bi bi-arrow-left-circle"></i> <!-- Bootstrap 5 arrow icon -->
    </a>

    <div class="row justify-content-center align-items-center min-vh-100 mx-0">
        <div class="col-md-4">
            <div class="card shadow-lg" style="background-color: white;">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <img src="/images/logoSeal.jpg" alt="BreyLink Logo" class="img-fluid mb-2" style="max-width: 80px;">
                        <h5 class="mb-2">Welcome to BrgyLink!</h5>
                        <p class="text-muted small">Please login your account to proceed.</p>
                    </div>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger small" role="alert"></div>

                        <div class="mb-3">
                            <label class="form-label small mb-1">Email</label>
                            <input asp-for="Input.Email" class="form-control"
                                   placeholder="Enter your email" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label small mb-1">Password</label>
                            <div class="input-group">
                                <input asp-for="Input.Password" class="form-control"
                                       type="password"
                                       placeholder="Password" />
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary">Sign in</button>
                        </div>

                        <div class="text-center">
                            <a href="#" class="text-primary small text-decoration-none">Forgot password</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const togglePassword = document.querySelector('#togglePassword');
            const password = document.querySelector('input[type="password"]');

            togglePassword.addEventListener('click', function () {
                const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                password.setAttribute('type', type);

                const icon = this.querySelector('i');
                icon.classList.toggle('bi-eye');
                icon.classList.toggle('bi-eye-slash');
            });
        });
    </script>
}