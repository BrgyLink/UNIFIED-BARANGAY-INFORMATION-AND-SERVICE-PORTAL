@page
@model BrgyLink.Pages.MapsModel
@{
    ViewData["Title"] = "Map";
}


<!-- Container to wrap the page content -->
<div class="container-fluid">
    <header class="text-center mt-4 mb-4">
        <h1>Cabadiangan Barangay Hall</h1>
        <p class="lead" style="color: white;">Cabadiangan, Compostela, Cebu(10.455429, 123.975976)</p>
    </header>

    <!-- Map Container -->
    <div id="map"></div>

    <!-- Footer Section -->
    <footer class="text-center mt-4">
        <p>&copy; 2024 Barangay Cabadiangan | Powered by OpenStreetMap & Leaflet</p>
    </footer>
</div>

<!-- Include Leaflet.js and Bootstrap JS (via CDN) -->>
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

<script>
    // Create the map centered at the given coordinates
    var map = L.map('map').setView([10.455429102312696, 123.97597630995176], 15); // Zoom level 15

    // Add OpenStreetMap tile layer
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    // Add a marker at the given coordinates
    L.marker([10.455429102312696, 123.97597630995176]).addTo(map)
        .bindPopup('<b>Barangay Cabadiangan</b><br>This is the location.')
        .openPopup();
</script>