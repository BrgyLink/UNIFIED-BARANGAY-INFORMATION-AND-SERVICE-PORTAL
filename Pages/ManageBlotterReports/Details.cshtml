        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Blotter.Incident)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Blotter.Complainant)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Blotter.Complainant)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Blotter.Respondent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Blotter.Respondent)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Blotter.DateReported)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Blotter.DateReported)
        </dd>
        <dt class="col-sm-2">
