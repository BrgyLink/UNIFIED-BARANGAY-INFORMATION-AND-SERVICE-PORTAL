@page
@model BrgyLink.Pages.ManageBlotterReports.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";
}

<h1>Create</h1>

<h4>Blotter</h4>
<hr />
<form method="post">
    <div class="form-group">
        <label for="Incident">Incident</label>
        <input type="text" class="form-control" id="Incident" asp-for="Blotter.Incident" required />
    </div>

    <div class="form-group">
        <label for="Complainant">Complainant</label>
        <input type="text" class="form-control" id="Complainant" asp-for="Blotter.Complainant" required />
    </div>

    <div class="form-group">
        <label for="Respondent">Respondent</label>
        <input type="text" class="form-control" id="Respondent" asp-for="Blotter.Respondent" required />
    </div>

    <div class="form-group">
        <label for="ActionTaken">Action Taken</label>
        <input type="text" class="form-control" id="ActionTaken" asp-for="Blotter.ActionTaken" />
    </div>

    <!-- Dropdown for Status -->
    <div class="form-group">
        <label for="Status">Status</label>
        <select class="form-control" id="Status" asp-for="Blotter.Status" required>
            <option value="Pending">Pending</option>
            <option value="Resolved">Resolved</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
