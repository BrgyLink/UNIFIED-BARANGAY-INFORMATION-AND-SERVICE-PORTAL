<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Barangay Cabadiangan</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="stylesheet" href="/css/Services.css" />
    <link rel="stylesheet" href="/css/About.css" />
    <style>
       /* Ensure the background color covers the entire page */

html, body {
    height: 100%;
    margin: 0;
    padding: 0;
    background-color: #1a237e; /* Background color for the whole page */
    width: 100%;
    	
}

.container {
    padding-left: 0;
    padding-right: 0;
}

/* Ensure that the hero section takes up the full height of the viewport */
.hero-section {
    background-color: #1a237e;
    color: white;
    min-height: 80vh; /* Ensure the hero section has a good height */
    padding: 50px 0;
    width: 100%;
}

.navbar-nav .nav-link {
    color: white !important;
    font-weight: 500;
    margin: 0 10px;
}

.logo-img {
    width: 300px;
    height: 300px;
    object-fit: contain;
}

.brand-text {
    font-size: 24px;
    font-weight: bold;
    color: white;
    text-decoration: none;
}

.welcome-text {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 20px;
}

.about-btn, .Service-btn{
    background-color: white;
    color: #1a237e;
    padding: 10px 30px;
    border-radius: 25px;
    text-transform: uppercase;
    font-weight: bold;
    border: none;
    transition: all 0.3s;
    cursor: pointer;
}

/* Hover effect for About Us button */
.about-btn:hover {
    background-color: #e0e0e0;
    transform: translateY(-2px);
}

/* Hover effect for Contact Us button */
.Service-btn:hover {
    background-color: #e0e0e0;
    transform: translateY(-2px);
}

/* Ensure buttons are aligned side by side */
.text-center.text-md-start {
    display: flex;
    justify-content: center;
    gap: 15px; /* Space between buttons */
}

        .footer {
            background-color: #f8f9fa;
            padding: 50px 0;
        }

        .footer-logo {
            max-width: 120px;
            margin-bottom: 20px;
        }

        .social-icons a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 35px;
            height: 35px;
            background-color: #e9ecef;
            border-radius: 50%;
            margin-right: 10px;
            color: #495057;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .social-icons a:hover {
                background-color: #dee2e6;
                transform: translateY(-2px);
            }

        .contact-info {
            margin-bottom: 10px;

        }

            .contact-info h6 {
                font-weight: 600;
                margin-bottom: 5px;
            }

            .contact-info p {
                color: #6c757d;
                margin-bottom: 5px;
            }

        /* New styles for contact section */
        .contact-section {
            padding-left: 120px; /* Added padding to move content right */


        }

/*Transtion Index*/
  
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg" style="background-color: #1a237e;">
        <div class="container">
            <a class="brand-text navbar-brand" href="#">BrgyLink</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Index">HOME</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/AboutUs">ABOUT</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Services">SERVICES</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Maps">MAP</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">TRACK MY REQUEST</a>
                    </li>
                    <li class="nav-item">
                        @await Html.PartialAsync("_LoginPartial")
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <!-- Company Info Column -->
                <div class="col-lg-5 mb-4 mb-lg-0">
                    <img src="/images/brgylink.png" alt="Company Logo" class="footer-logo">
                    <p class="mb-4">At Interactive Tech Solutions, we're not just crafting software solutions; we're architecting experiences. Our journey began with a simple yet profound vision: to empower businesses of all sizes with cutting-edge technology that simplifies complexities and enhances productivity.</p>

                    <div class="social-icons">
                        <a href="#" class="facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="twitter"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="linkedin"><i class="fab fa-linkedin-in"></i></a>
                        <a href="#" class="instagram"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>

                <!-- Contact Info Column -->
                <div class="col-lg-6 offset-lg-1">
                    <h5 class="mb-4">Contact Us</h5>

                    <div class="contact-info">
                        <h6>ADDRESS:</h6>
                        <p>Johar Town,Lahore, 54000 Pakistan</p>
                    </div>

                    <div class="contact-info">
                        <h6>WHATSAPP:</h6>
                        <p>+92 316 5544991</p>
                    </div>

                    <div class="contact-info">
                        <h6>EMAIL:</h6>
                        <p>info@itsolz.tech<br>amnakhank22@gmail.com</p>
                    </div>

                    <div class="contact-info">
                        <h6>PHONE:</h6>
                        <p>+92 317 6063309</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft.signalr/5.0.11/signalr.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
