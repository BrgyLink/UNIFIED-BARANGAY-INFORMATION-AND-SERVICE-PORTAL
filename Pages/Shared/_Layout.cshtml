<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Barangay Cabadiangan</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="stylesheet" href="/css/Services.css" />
    <style>
       /* Ensure the background color covers the entire page */
html, body {
    height: 100%;
    margin: 0;
    padding: 0;
    background-color: #1a237e; /* Background color for the whole page */
    width: 100%;
}

.container {
    padding-left: 0;
    padding-right: 0;
}

/* Ensure that the hero section takes up the full height of the viewport */
.hero-section {
    background-color: #1a237e;
    color: white;
    min-height: 80vh; /* Ensure the hero section has a good height */
    padding: 50px 0;
    width: 100%;
}

.navbar-nav .nav-link {
    color: white !important;
    font-weight: 500;
    margin: 0 10px;
}

.logo-img {
    width: 300px;
    height: 300px;
    object-fit: contain;
}

.brand-text {
    font-size: 24px;
    font-weight: bold;
    color: white;
    text-decoration: none;
}

.welcome-text {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 20px;
}

.about-btn, .Service-btn{
    background-color: white;
    color: #1a237e;
    padding: 10px 30px;
    border-radius: 25px;
    text-transform: uppercase;
    font-weight: bold;
    border: none;
    transition: all 0.3s;
    cursor: pointer;
}

/* Hover effect for About Us button */
.about-btn:hover {
    background-color: #e0e0e0;
    transform: translateY(-2px);
}

/* Hover effect for Contact Us button */
.Service-btn:hover {
    background-color: #e0e0e0;
    transform: translateY(-2px);
}

/* Ensure buttons are aligned side by side */
.text-center.text-md-start {
    display: flex;
    justify-content: center;
    gap: 15px; /* Space between buttons */
}




/*Transtion Index*/
  
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg" style="background-color: #1a237e;">
        <div class="container">
            <a class="brand-text navbar-brand" href="#">BrgyLink</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Index">HOME</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">ABOUT</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Services">SERVICES</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Maps">MAP</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">TRACK MY REQUEST</a>
                    </li>
                    <li class="nav-item">
                        @await Html.PartialAsync("_LoginPartial")
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted";>
        <div class="container" style="color: white;">
            &copy; 2024 - BrgyLink - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft.signalr/5.0.11/signalr.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
