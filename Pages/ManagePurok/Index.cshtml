@page
@model BrgyLink.Pages.ManagePurok.IndexModel
@{
    ViewData["Title"] = "Purok Management";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-3 align-items-center">
        <div class="col">
            <h1 class="display-6">Purok Management</h1>
        </div>
        <div class="col-auto">
            <a asp-page="Create" class="btn btn-primary">
                <i class="fas fa-plus-circle me-2"></i>Create New Purok
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Purok Name</th>
                            <th>Description</th>
                            <th class="text-center">Number of Registered People</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Purok)
                        {
                            <tr>
                                <td class="fw-bold">@item.Name</td>
                                <td>
                                    @if (string.IsNullOrEmpty(item.Description))
                                    {
                                        <span class="text-muted fst-italic">No description provided</span>
                                    }
                                    else
                                    {
                                        @item.Description
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-primary">
                                        @item.NumberOfRegisteredPeople
                                    </span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-page="./Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit me-1"></i>Edit
                                        </a>
                                        <a asp-page="./Details" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-info">
                                            <i class="fas fa-info-circle me-1"></i>Details
                                        </a>
                                        <a asp-page="./Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash me-1"></i>Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
