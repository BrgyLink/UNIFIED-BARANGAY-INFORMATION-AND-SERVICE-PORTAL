@page
@model BrgyLink.Pages.AdminDashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

    <h2>Dashboard Overview</h2>
    <p>Welcome, Admin! Here’s an overview of the latest activities and statistics.</p>

    <section class="statistics mb-4">
        <div class="row">
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title">Total Users</h3>
                        <p class="card-text display-4">@Model.TotalResidents</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title">Pending Requests</h3>
                        <p class="card-text display-4">12</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title">Resolved Blotter Reports</h3>
                        <p class="card-text display-4">5</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <h2>Recent Activities</h2>
        <div class="list-group">
            <a href="#" class="list-group-item list-group-item-action">
                User <strong>John Doe</strong> requested a certificate on <em>2024-10-25</em>
            </a>
            <a href="#" class="list-group-item list-group-item-action">
                Blotter report closed by Admin <strong>Jane Smith</strong> on <em>2024-10-24</em>
            </a>
        </div>
    </section>

<section>
    <h2>Quick Actions</h2>
    <button>Manage Users</button>
    <button>View Reports</button>
    <button>Settings</button>
</section>

