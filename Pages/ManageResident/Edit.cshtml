@page
@model BrgyLink.Pages.ManageResident.EditModel

@{
    ViewData["Title"] = "Edit Resident";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h4 class="text-center mb-3 text-primary">Edit Resident</h4>
<form method="post" enctype="multipart/form-data" id="createResidentForm">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
    <input type="hidden" asp-for="Resident.ResidentID" />
    <div class="container">
        <div class="row justify-content-center">
            <!-- Image Upload Column -->
            <div class="col-12 col-md-4 mb-3">
                <div class="card shadow-sm">
                    <div class="card-header py-2 bg-primary text-white">Image Upload</div>
                    <div class="card-body p-2">
                        @if (Model.Resident.ImageData != null)
                        {
                            <img id="imagePreview" src="data:image/jpeg;base64,@Convert.ToBase64String(@Model.Resident.ImageData)" class="img-fluid rounded-circle mx-auto d-block" style="width: 150px; height: 150px; object-fit: cover;" />
                        }
                        else
                        {
                            <img id="imagePreview" src="/images/avatarPlaceholder.jpg" class="img-fluid rounded-circle mx-auto d-block" style="width: 150px; height: 150px;" />
                        }
                        <div class="mt-2">
                            <input type="file" class="form-control form-control-sm" asp-for="Resident.ImageFile" accept=".jpg,.jpeg,.png" onchange="previewImage(this)" />
                            <small class="text-muted">Max: 5MB (JPG, JPEG, PNG)</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form Cards Column -->
            <div class="col-12 col-md-8">
                <!-- Name Section -->
                <div class="card mb-3 shadow-sm">
                    <div class="card-header py-1 bg-secondary text-white">Name</div>
                    <div class="card-body p-2">
                        <div class="row g-2">
                            <div class="col-sm-6">
                                <label class="form-label mb-1">First Name</label>
                                <input type="text" class="form-control form-control-sm" placeholder="First Name" asp-for="Resident.FirstName" required />
                            </div>
                            <div class="col-sm-6">
                                <label class="form-label mb-1">Last Name</label>
                                <input type="text" class="form-control form-control-sm" placeholder="Last Name" asp-for="Resident.LastName" required />
                            </div>
                            <div class="col-12">
                                <label class="form-label mb-1">Middle Name</label>
                                <input type="text" class="form-control form-control-sm" placeholder="Middle Name" asp-for="Resident.MiddleName" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Personal Information -->
                <div class="card mb-3 shadow-sm">
                    <div class="card-header py-1 bg-secondary text-white">Personal Information</div>
                    <div class="card-body p-2">
                        <div class="row g-2">
                            <div class="col-sm-4">
                                <label class="form-label mb-1">Birthdate</label>
                                <input type="date" class="form-control form-control-sm" asp-for="Resident.BirthDate" required />
                            </div>
                            <div class="col-sm-4">
                                <label class="form-label mb-1">Gender</label>
                                <select class="form-select form-select-sm" asp-for="Resident.Gender" required>
                                    <option value="">Select</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <div class="col-sm-4">
                                <label class="form-label mb-1">Civil Status</label>
                                <select class="form-select form-select-sm" asp-for="Resident.CivilStatus" required>
                                    <option value="Single">Single</option>
                                    <option value="Married">Married</option>
                                    <option value="Divorced">Divorced</option>
                                    <option value="Widowed">Widowed</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="card mb-3 shadow-sm">
                    <div class="card-header py-1 bg-secondary text-white">Contact Information</div>
                    <div class="card-body p-2">
                        <div class="row g-2">
                            <div class="col-12">
                                <label class="form-label mb-1">Address</label>
                                <textarea class="form-control form-control-sm" rows="1" asp-for="Resident.Address" required></textarea>
                            </div>
                            <div class="col-sm-6">
                                <label class="form-label mb-1">Contact Number</label>
                                <input type="tel" class="form-control form-control-sm" asp-for="Resident.ContactNumber" required />
                            </div>
                            <div class="col-sm-6">
                                <label class="form-label mb-1">Email</label>
                                <input type="email" class="form-control form-control-sm" asp-for="Resident.Email" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Special Information -->
                <div class="card mb-3 shadow-sm">
                    <div class="card-header py-1 bg-secondary text-white">Special Information</div>
                    <div class="card-body p-2">
                        <div class="row g-2">
                            <div class="col-sm-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" asp-for="Resident.IsSeniorCitizen" />
                                    <label class="form-check-label">Senior Citizen</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" asp-for="Resident.IsPWD" />
                                    <label class="form-check-label">PWD</label>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <label class="form-label mb-1">Voter Status</label>
                                <select class="form-select form-select-sm" asp-for="Resident.VoterStatus" required>
                                    <option value="Non-voter">Non-voter</option>
                                    <option value="Voter">Voter</option>
                                </select>
                            </div>
                            <div class="col-sm-4">
                                <label class="form-label mb-1">Occupation</label>
                                <input type="text" class="form-control form-control-sm" asp-for="Resident.Occupation" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Emergency Contact -->
                <div class="card mb-3 shadow-sm">
                    <div class="card-header py-1 bg-secondary text-white">Emergency Contact</div>
                    <div class="card-body p-2">
                        <div class="row g-2">
                            <div class="col-sm-6">
                                <label class="form-label mb-1">Emergency Contact</label>
                                <input type="text" class="form-control form-control-sm" asp-for="Resident.EmergencyContact" required />
                            </div>
                            <div class="col-sm-6">
                                <label class="form-label mb-1">Health Conditions</label>
                                <textarea class="form-control form-control-sm" rows="1" asp-for="Resident.HealthConditions"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="text-end mb-3">
                    <button type="submit" class="btn btn-primary">Save Resident</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                const file = input.files[0];
                if (file.size > 5 * 1024 * 1024) {
                    alert('File size cannot exceed 5MB');
                    input.value = '';
                    return;
                }
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('imagePreview').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                $(document).ready(function () {
                    Swal.fire({
                        title: 'Success',
                        text: 'Resident updated successfully!',
                        icon: 'success',
                        confirmButtonText: 'OK'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $('#imagePreview').attr('src', '/images/avatarPlaceholder.jpg');
                        }
                    });
                });
            </text>
        }
    </script>
}