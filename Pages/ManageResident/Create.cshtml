@page
@model BrgyLink.Pages.ManageResident.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}


<h1 class="text-center mb-4">Create Resident</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Resident.FirstName" class="control-label">First Name</label>
                        <input asp-for="Resident.FirstName" class="form-control" />
                        <span asp-validation-for="Resident.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Resident.LastName" class="control-label">Last Name</label>
                        <input asp-for="Resident.LastName" class="form-control" />
                        <span asp-validation-for="Resident.LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Resident.MiddleName" class="control-label">Middle Name</label>
                <input asp-for="Resident.MiddleName" class="form-control" placeholder="Optional" />
                <span asp-validation-for="Resident.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resident.ResidencyStatus"></label>
                <input asp-for="Resident.ResidencyStatus" class="form-control" />
                <span asp-validation-for="Resident.ResidencyStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Resident.Nationality"></label>
                <input asp-for="Resident.Nationality" class="form-control" />
                <span asp-validation-for="Resident.Nationality" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Resident.CivilStatus"></label>
                <input asp-for="Resident.CivilStatus" class="form-control" />
                <span asp-validation-for="Resident.CivilStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Resident.VoterStatus"></label>
                <input asp-for="Resident.VoterStatus" class="form-control" />
                <span asp-validation-for="Resident.VoterStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Resident.EmergencyContact"></label>
                <input asp-for="Resident.EmergencyContact" class="form-control" />
                <span asp-validation-for="Resident.EmergencyContact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resident.Address" class="control-label">Address</label>
                <input asp-for="Resident.Address" class="form-control" />
                <span asp-validation-for="Resident.Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Resident.ContactNumber" class="control-label">Contact Number</label>
                <input asp-for="Resident.ContactNumber" class="form-control" />
                <span asp-validation-for="Resident.ContactNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Resident.Email" class="control-label">Email</label>
                <input asp-for="Resident.Email" type="email" class="form-control" />
                <span asp-validation-for="Resident.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Resident.BirthDate" class="control-label">Birth Date</label>
                <input asp-for="Resident.BirthDate" type="date" class="form-control" />
                <span asp-validation-for="Resident.BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Resident.Gender" class="control-label">Gender</label>
                <select asp-for="Resident.Gender" class="form-control">
                    <option value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Resident.Gender" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Resident.IsSeniorCitizen" class="form-check-label">Senior Citizen</label>
                <input asp-for="Resident.IsSeniorCitizen" type="checkbox" class="form-check-input" />
            </div>

            <div class="form-group">
                <label asp-for="Resident.IsPWD" class="form-check-label">Is a PWD?</label>
                <input asp-for="Resident.IsPWD" type="checkbox" class="form-check-input" />
            </div>

            <div class="form-group">
                <label asp-for="Resident.ImageFile" class="control-label">Profile Picture</label>
                <input asp-for="Resident.ImageFile" class="form-control" type="file" />
                <span asp-validation-for="Resident.ImageFile" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary mt-3">Create Resident</button>
            </div>
        </form>
    </div>
</div>



<!-- Success Modal -->
<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="successModalLabel">Success</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Data submitted successfully!
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
}