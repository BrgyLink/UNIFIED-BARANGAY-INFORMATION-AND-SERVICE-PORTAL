@page
@model BrgyLink.Pages.ManageResident.CreateModel

@{
    ViewData["Title"] = "Create Resident";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mb-4">Create Resident</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <form method="post" enctype="multipart/form-data" id="createResidentForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Image Column -->
                <div class="text-center mb-4">
                    <img id="imagePreview" src="/images/avatarPlaceholder.jpg" alt="Resident Image Preview"
                         class="img-fluid mb-3" style="max-width: 150px; max-height: 150px; border-radius: 50%; object-fit: cover;" />
                    <div class="mb-3">
                        <input type="file" class="form-control" asp-for="Resident.ImageFile"
                               accept=".jpg,.jpeg,.png" onchange="previewImage(this)" />
                        <span asp-validation-for="Resident.ImageFile" class="text-danger"></span>
                        <small class="form-text text-muted">Maximum file size: 5MB. Allowed formats: JPG, JPEG, PNG</small>
                    </div>
                </div>

                <!-- Form Fields (e.g. First Name, Last Name, Address, etc.) -->
                <!-- Your other form fields go here -->
                <div class="row mb-3">
                    <div class="col-6">
                        <input type="text" class="form-control form-control-sm" placeholder="Enter Firstname" asp-for="Resident.FirstName" required />
                        <span asp-validation-for="Resident.FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input type="text" class="form-control form-control-sm" placeholder="Enter Lastname" asp-for="Resident.LastName" required />
                        <span asp-validation-for="Resident.LastName" class="text-danger"></span>
                    </div>
                </div>

                <!-- Middle Name -->
                <div class="form-group mb-3">
                    <input type="text" class="form-control form-control-sm" placeholder="Enter Middlename" asp-for="Resident.MiddleName" />
                    <span asp-validation-for="Resident.MiddleName" class="text-danger"></span>
                </div>

                <!-- Address -->
                <div class="form-group mb-3">
                    <textarea class="form-control form-control-sm" placeholder="Enter Address" rows="1" asp-for="Resident.Address" required></textarea>
                    <span asp-validation-for="Resident.Address" class="text-danger"></span>
                </div>

                <!-- Contact Number and Email -->
                <div class="row mb-3">
                    <div class="col-6">
                        <input type="tel" class="form-control form-control-sm" placeholder="Enter Contact Number" asp-for="Resident.ContactNumber" required />
                        <span asp-validation-for="Resident.ContactNumber" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input type="email" class="form-control form-control-sm" placeholder="Enter Email" asp-for="Resident.Email" />
                        <span asp-validation-for="Resident.Email" class="text-danger"></span>
                    </div>
                </div>

                <!-- Birthdate, Gender, Civil Status -->
                <div class="row mb-3">
                    <div class="col-4">
                        <input type="date" class="form-control form-control-sm" asp-for="Resident.BirthDate" required />
                        <span asp-validation-for="Resident.BirthDate" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <select class="form-select form-select-sm" asp-for="Resident.Gender" required>
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Resident.Gender" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <select class="form-select form-select-sm" asp-for="Resident.CivilStatus" required>
                            <option value="Single">Single</option>
                            <option value="Married">Married</option>
                            <option value="Divorced">Divorced</option>
                            <option value="Widowed">Widowed</option>
                        </select>
                        <span asp-validation-for="Resident.CivilStatus" class="text-danger"></span>
                    </div>
                </div>

                <!-- Nationality and Residency Status -->
                <div class="row mb-3">
                    <div class="col-6">
                        <input type="text" class="form-control form-control-sm" placeholder="Enter Nationality" asp-for="Resident.Nationality" required />
                        <span asp-validation-for="Resident.Nationality" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <select class="form-select form-select-sm" asp-for="Resident.ResidencyStatus" disabled>
                            <option value="Resident">Resident</option>
                        </select>
                        <span asp-validation-for="Resident.ResidencyStatus" class="text-danger"></span>
                    </div>
                </div>

                <!-- Senior Citizen Checkbox -->
                <div class="row mb-3">
                    <div class="col-12">
                        <div class="form-check form-check-sm">
                            <input class="form-check-input" type="checkbox" asp-for="Resident.IsSeniorCitizen" />
                            <label class="form-check-label">Senior Citizen</label>
                        </div>
                        <span asp-validation-for="Resident.IsSeniorCitizen" class="text-danger"></span>
                    </div>
                </div>

                <!-- PWD, Voter Status and Occupation -->
                <div class="row mb-3">
                    <div class="col-4">
                        <div class="form-check form-check-sm">
                            <input class="form-check-input" type="checkbox" asp-for="Resident.IsPWD" />
                            <label class="form-check-label">Person with Disability (PWD)</label>
                        </div>
                        <span asp-validation-for="Resident.IsPWD" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <select class="form-select form-select-sm" asp-for="Resident.VoterStatus" required>
                            <option value="Non-voter">Non-voter</option>
                            <option value="Voter">Voter</option>
                        </select>
                        <span asp-validation-for="Resident.VoterStatus" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input type="text" class="form-control form-control-sm" placeholder="Enter Occupation" asp-for="Resident.Occupation" />
                        <span asp-validation-for="Resident.Occupation" class="text-danger"></span>
                    </div>
                </div>

                <!-- Emergency Contact and Health Conditions -->
                <div class="row mb-3">
                    <div class="col-6">
                        <input type="text" class="form-control form-control-sm" placeholder="Enter Emergency Contact" asp-for="Resident.EmergencyContact" required />
                        <span asp-validation-for="Resident.EmergencyContact" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <textarea class="form-control form-control-sm" placeholder="Enter Health Conditions (if any)" rows="1" asp-for="Resident.HealthConditions"></textarea>
                        <span asp-validation-for="Resident.HealthConditions" class="text-danger"></span>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg mt-3">Save Resident</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Success Modal -->
<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="successModalLabel">Success</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Data submitted successfully!
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                const file = input.files[0];

                // Validate file size (5MB)
                if (file.size > 5 * 1024 * 1024) {
                    alert('File size cannot exceed 5MB');
                    input.value = '';
                    return;
                }

                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('imagePreview').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        }

        // Show success message using bootstrap modal if TempData contains success message
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                    $(document).ready(function () {
                        $('#successModal').modal('show');
                    });
            </text>
        }
    </script>
}
}