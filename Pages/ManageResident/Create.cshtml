@page
@model BrgyLink.Pages.ManageResident.CreateModel

@{
    ViewData["Title"] = "Create Resident";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<!-- Table Title -->
<div class="mb-4">
    <div class="card shadow-sm border-0">
        <div class="card-body d-flex justify-content-between align-items-center">
            <!-- Section Title -->
            <div>
                <h3 class="card-title mb-0">Adding New <b>Resident</b></h3>
                <p class="text-muted mb-0">Make sure you check before you add.</p>
            </div>
        </div>
    </div>
</div>

<form method="post" enctype="multipart/form-data" id="createResidentForm">
        <div class="row">
            <!-- Image Upload Card -->
            <div class="mx grid-margin stretch-card">
                <div class="card">
                    <div class="card-body text-center">
                        <h4 class="card-title">Image Upload</h4>
                        <img id="imagePreview" src="/images/avatarPlaceholder.jpg" alt="Resident Image Preview" class="img-fluid rounded-circle mb-3" style="width: 250px; height: 250px; object-fit: cover;" />
                        <div>
                            <input type="file" class="form-control form-control-sm" asp-for="Resident.ImageFile" accept=".jpg,.jpeg,.png" onchange="previewImage(this)" />
                            <small class="text-muted">Max: 5MB (JPG, JPEG, PNG)</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Name Section Card -->
            <div class="col-md-8 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Personal Information</h4>
                        <p class="card-description">Enter the resident's name details</p>
                        <div class="form-group position-relative">
                            <label for="FirstName">First Name</label>
                            <i class="mdi mdi-account-circle position-absolute" style="top: 36px; left: 10px;"></i>
                            <input type="text" class="form-control ps-5" asp-for="Resident.FirstName" placeholder="First Name" required />
                            <span asp-validation-for="Resident.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group position-relative">
                            <label for="LastName">Last Name</label>
                            <i class="mdi mdi-account-circle position-absolute" style="top: 36px; left: 10px;"></i>
                            <input type="text" class="form-control ps-5" asp-for="Resident.LastName" placeholder="Last Name" required />
                            <span asp-validation-for="Resident.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group position-relative">
                            <label for="MiddleName">Middle Name</label>
                            <i class="mdi mdi-account-circle position-absolute" style="top: 36px; left: 10px;"></i>
                            <input type="text" class="form-control ps-5" asp-for="Resident.MiddleName" placeholder="Middle Name" />
                            <span asp-validation-for="Resident.MiddleName" class="text-danger"></span>
                            <small class="text-muted">If no middle name, put "None"</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Personal Information Card -->
            <div class="col-md-4 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Personal Details</h4>
                        <p class="card-description">Provide personal details</p>
                        <div class="form-group position-relative">
                            <label for="BirthDate">Birthdate</label>
                            <i class="mdi mdi-calendar position-absolute" style="top: 36px; left: 10px;"></i>
                            <input type="date" class="form-control ps-5" asp-for="Resident.BirthDate" required />
                            <span asp-validation-for="Resident.BirthDate" class="text-danger"></span>
                        </div>
                        <div class="form-group position-relative">
                            <label for="Gender">Gender</label>
                            <i class="mdi mdi-gender-male-female position-absolute" style="top: 36px; left: 10px;"></i>
                            <select class="form-control ps-5" asp-for="Resident.Gender" required>
                                <option value="">Select</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Resident.Gender" class="text-danger"></span>
                        </div>
                        <div class="form-group position-relative">
                            <label for="CivilStatus">Civil Status</label>
                            <i class="mdi mdi-ring position-absolute" style="top: 36px; left: 10px;"></i>
                            <select class="form-control ps-5" asp-for="Resident.CivilStatus" required>
                                <option value="Single">Single</option>
                                <option value="Married">Married</option>
                                <option value="Divorced">Divorced</option>
                                <option value="Widowed">Widowed</option>
                            </select>
                            <span asp-validation-for="Resident.CivilStatus" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Emergency Contact Card -->
            <div class="col-md-4 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Emergency Contact</h4>
                        <p class="card-description">Provide emergency contact details</p>
                        <div class="form-group position-relative">
                            <label for="EmergencyContact">Emergency Contact</label>
                            <i class="mdi mdi-phone position-absolute" style="top: 36px; left: 10px;"></i>
                            <input type="text" class="form-control ps-5" asp-for="Resident.EmergencyContact" placeholder="Enter Emergency Contact" required />
                            <span asp-validation-for="Resident.EmergencyContact" class="text-danger"></span>
                        </div>
                        <div class="form-group position-relative">
                            <label for="HealthConditions">Health Conditions</label>
                            <i class="mdi mdi-heart position-absolute" style="top: 36px; left: 10px;"></i>
                            <input type="text" class="form-control ps-5" rows="2" asp-for="Resident.HealthConditions" placeholder="Enter any health conditions"></input>
                            <span asp-validation-for="Resident.HealthConditions" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Information Card -->
            <div class="col-md-4 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Contact Information</h4>
                        <p class="card-description">Provide contact details</p>
                        <div class="form-group position-relative">
                            <label for="Address">Address</label>
                            <i class="mdi mdi-map-marker position-absolute" style="top: 36px; left: 10px;"></i>
                            <select class="form-control ps-5" asp-for="Resident.PurokId" asp-items= "@(ViewData["Puroks"] as SelectList)" required>
                                <option>Select Purok Address</option>
                            </select>
                            <span asp-validation-for="Resident.PurokId" class="text-danger"></span>
                        </div>
                        <div class="form-group position-relative">
                            <label for="ContactNumber">Contact Number</label>
                            <i class="mdi mdi-phone position-absolute" style="top: 36px; left: 10px;"></i>
                            <input type="tel" class="form-control ps-5" asp-for="Resident.ContactNumber" placeholder="Enter Contact Number" required />
                            <span asp-validation-for="Resident.ContactNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group position-relative">
                            <label for="Email">Email</label>
                            <i class="mdi mdi-email position-absolute" style="top: 36px; left: 10px;"></i>
                            <input type="email" class="form-control ps-5" asp-for="Resident.Email" placeholder="Enter Email" />
                            <span asp-validation-for="Resident.Email" class="text-danger"></span>
                            <small class="text-muted">If no email, put "None@mail.com"</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Special Information Card -->
            <div class="col-md-4 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Special Information</h4>
                        <p class="card-description">Provide additional special information</p>
                        <div class="form-group position-relative">
                            <!-- Senior Citizen Checkbox -->
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" asp-for="Resident.IsSeniorCitizen" />
                                    Senior Citizen
                                </label>
                            </div>
                            <!-- PWD Checkbox -->
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" asp-for="Resident.IsPWD" />
                                    Person With Disability ( PWD )
                                </label>
                            </div>
                        </div>
                        <div class="form-group position-relative">
                            <!-- Voter Status Dropdown -->
                            <label for="VoterStatus">Voter Status</label>
                            <select class="form-control ps-5" asp-for="Resident.VoterStatus" required>
                                <option value="Non-voter">Non-voter</option>
                                <option value="Voter">Voter</option>
                            </select>
                            <span asp-validation-for="Resident.VoterStatus" class="text-danger"></span>
                        </div>
                        <div class="form-group position-relative">
                            <!-- Occupation Input -->
                            <label for="Occupation">Occupation</label>
                            <i class="mdi mdi-briefcase position-absolute" style="top: 36px; left: 10px;"></i>
                            <input type="text" class="form-control ps-5" placeholder="Enter Occupation" asp-for="Resident.Occupation" />
                            <span asp-validation-for="Resident.Occupation" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mx d-flex justify-content-between">
                <a asp-page="/ManageResident/Index" class="btn btn-danger">
                    
                    Back
                </a>
                <button type="submit" class="btn btn-primary">Save Resident</button>
            </div>

        </div>
</form>





@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                const file = input.files[0];
                if (file.size > 5 * 1024 * 1024) {
                    alert('File size cannot exceed 5MB');
                    input.value = '';
                    return;
                }
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('imagePreview').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        }

        @* Here is the corrected handling of the SweetAlert message and redirection *@
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                $(document).ready(function () {
                    Swal.fire({
                        title: 'Success',
                        text: 'Resident created successfully!',
                        icon: 'success',
                        confirmButtonText: 'OK'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Redirect to the Manage Barangay Officials Index page
                            window.location.href = '/ManageResident/Index';
                        }
                    });
                });
            </text>
        }
    </script>
}