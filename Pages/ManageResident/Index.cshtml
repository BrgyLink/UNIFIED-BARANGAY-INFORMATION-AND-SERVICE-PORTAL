@page
@model BrgyLink.Pages.ManageResident.IndexModel
@{
    ViewData["Title"] = "Residents";
    Layout = "_AdminLayout";
}

<link rel="stylesheet" href="~/css/ResidentsPage/ResidentManage.css" asp-append-version="true" />

<div class="table-title">
    <div class="row">
        <div class="col-sm-5">
            <h2>Residents <b>Management</b></h2>
        </div>
        <div class="col-sm-7">
            <a asp-area="" asp-page="/ManageResident/Create" class="btn btn-secondary">
                <i class="material-icons"></i> <span>Add New Resident</span>
            </a>
            <a asp-page="/ManageResident/Index" asp-handler="ExportToExcel" class="btn btn-secondary">
                <i class="material-icons"></i> <span>Export to Excel</span>
            </a>
        </div>
    </div>
</div>

<!-- Search Form -->
<form method="get">
    <div class="input-group mb-3">
        <input type="text" name="SearchString" value="@Model.SearchString" class="form-control" placeholder="Search residents...">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>

<!-- Residents Table -->
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Profile</th>
            <th>Name <i class="fa fa-sort"></i></th>
            <th>Address</th>
            <th>Age <i class="fa fa-sort"></i></th>
            <th>Gender</th>
            <th>Nationality <i class="fa fa-sort"></i></th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Resident.Count; i++)
        {
            var resident = Model.Resident[i];
            <tr>
                <td>@((Model.PageIndex - 1) * 10 + i + 1)</td>
                <td class="d-flex justify-content-center align-items-center">
                    @if (resident.ImageData != null && resident.ImageData.Length > 0)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(resident.ImageData)" class="img-fluid rounded-circle" alt="BarangayOfficial Image" height="75" width="75" />
                    }
                    else
                    {
                        <img src="/images/avatarPlaceholder.jpg" class="img-fluid rounded-circle" alt="BarangayOfficial Image" height="75" width="75" />
                    }
                </td>
                <td>@resident.FirstName @resident.LastName</td>
                <td>@resident.Address</td>
                <td>@resident.Age</td>
                <td>@resident.Gender</td>
                <td>@resident.Nationality</td>
                <td>
                    <div class="action-buttons d-flex justify-content-center">
                        <a asp-page="./Details" asp-route-id="@resident.ResidentID" class="view" title="View" data-bs-toggle="tooltip"><i class="material-icons">visibility</i></a>
                        <a asp-page="./Edit" asp-route-id="@resident.ResidentID" class="edit" title="Edit"><i class="material-icons">edit</i></a>
                        <a asp-page="./Delete" asp-route-id="@resident.ResidentID" class="delete" title="Delete"><i class="material-icons">delete</i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination Controls -->
<div class="clearfix">
    <div class="hint-text">
        Showing <b>@Model.Resident.Count</b> out of <b>@Model.Resident.TotalItems</b> entries
    </div>

    <ul class="pagination">
        <!-- Previous Page Link -->
        @if (Model.Resident.HasPreviousPage)
        {
            <li class="page-item">
                <a asp-page="./Index" asp-route-pageIndex="@(Model.PageIndex - 1)" asp-route-searchString="@Model.SearchString" class="page-link">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a href="#" class="page-link">Previous</a>
            </li>
        }

        <!-- Page Number Links -->
        @for (int i = 1; i <= Model.Resident.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a asp-page="./Index" asp-route-pageIndex="@i" asp-route-searchString="@Model.SearchString" class="page-link">@i</a>
            </li>
        }

        <!-- Next Page Link -->
        @if (Model.Resident.HasNextPage)
        {
            <li class="page-item">
                <a asp-page="./Index" asp-route-pageIndex="@(Model.PageIndex + 1)" asp-route-searchString="@Model.SearchString" class="page-link">Next</a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a href="#" class="page-link">Next</a>
            </li>
        }
    </ul>
</div>