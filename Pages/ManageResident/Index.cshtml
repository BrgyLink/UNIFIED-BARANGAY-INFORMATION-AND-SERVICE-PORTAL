@page
@model BrgyLink.Pages.ManageResident.IndexModel
@{
    ViewData["Title"] = "Residents";
    Layout = "_AdminLayout";
}

<link rel="stylesheet" href="~/css/ResidentsPage/ResidentManage.css" asp-append-version="true" />

<div class="table-title">
    <div class="row">
        <div class="col-sm-5">
            <h2>Residents <b>Management</b></h2>
        </div>
        <div class="col-sm-7">
            <a asp-area="" asp-page="/ManageResident/Create" class="btn btn-secondary"><i class="material-icons"></i> <span>Add New Resident</span></a>
            <a href="#" class="btn btn-secondary"><i class="material-icons"></i> <span>Export to Excel</span></a>
        </div>
    </div>
</div>
<form method="get">
    <div class="input-group mb-3">
        <input type="text" name="SearchString" value="@Model.SearchString" class="form-control" placeholder="Search residents...">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Name <i class="fa fa-sort"></i></th>
            <th>Address</th>
            <th>Age<i class="fa fa-sort"></i></th>
            <th>Gender</th>
            <th>Nationality <i class="fa fa-sort"></i></th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Resident.Count; i++)
        {
            var resident = Model.Resident[i];
            <tr>
                <td>@(i + 1)</td>
                <td>@resident.FirstName @resident.LastName</td>
                <td>@resident.Address</td>
                <td>@resident.Age</td>
                <td>@resident.Gender</td>
                <td>@resident.Nationality</td>
                <td>
                    <a href="#" class="view" title="View" data-bs-toggle="tooltip"><i class="material-icons">visibility</i></a>
                    <a href="#" class="edit" title="Edit" data-bs-toggle="modal" data-bs-target="#editModal-@resident.ResidentID"><i class="material-icons">edit</i></a>
                    <a href="#" class="delete" title="Delete" data-bs-toggle="modal" data-bs-target="#deleteModal-@resident.ResidentID"><i class="material-icons">delete</i></a>
                </td>
            </tr>

            <!-- Edit Modal -->
            <div class="modal fade" id="editModal-@resident.ResidentID" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Edit Resident</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <!-- Edit Form Content -->
                        </div>
                    </div>
                </div>
            </div>

            <!-- Delete Modal -->
            <div class="modal fade" id="deleteModal-@resident.ResidentID" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Delete Resident</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete @resident.FirstName @resident.LastName?
                        </div>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>
<div class="clearfix">
    <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
    <ul class="pagination">
        <li class="page-item disabled"><a href="#">Previous</a></li>
        <li class="page-item"><a href="#" class="page-link">1</a></li>
        <li class="page-item"><a href="#" class="page-link">2</a></li>
        <li class="page-item active"><a href="#" class="page-link">3</a></li>
        <li class="page-item"><a href="#" class="page-link">4</a></li>
        <li class="page-item"><a href="#" class="page-link">5</a></li>
        <li class="page-item"><a href="#" class="page-link">Next</a></li>
    </ul>
</div>


<nav aria-label="Page navigation">
    <ul class="pagination">
        <!-- Pagination logic here -->
    </ul>
</nav>