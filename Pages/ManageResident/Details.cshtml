@page
@model BrgyLink.Pages.ManageResident.DetailsModel

@{
    ViewData["Title"] = "Resident Details";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="container mt-2">

    <!-- Resident Info Card -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Resident Information</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Resident Image -->
                <div class="col-md-3">
                    @if (Model.Resident.ImageData != null)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Resident.ImageData)" class="img-fluid rounded" alt="Resident Image" />
                    }
                    else
                    {
                        <img src="/images/avatarPlaceholder.jpg" class="img-fluid rounded" alt="Resident Image" />
                    }
                </div>

                <!-- Resident Info (Right Section) -->
                <div class="col-md-9">
                    <dl class="row">
                        <!-- First Name -->
                        <dt class="col-sm-3">First Name</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Resident.FirstName)</dd>

                        <!-- Last Name -->
                        <dt class="col-sm-3">Last Name</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Resident.LastName)</dd>

                        <!-- Middle Name -->
                        <dt class="col-sm-3">Middle Name</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Resident.MiddleName)</dd>

                        <!-- Address -->
                        <dt class="col-sm-3">Address</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Resident.Address)</dd>

                        <!-- Contact Number -->
                        <dt class="col-sm-3">Contact Number</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Resident.ContactNumber)</dd>

                        <!-- Email -->
                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Resident.Email)</dd>

                        <!-- Birth Date -->
                        <dt class="col-sm-3">Birth Date</dt>
                        <dd class="col-sm-9">@Model.Resident.BirthDate.ToString("MMMM dd, yyyy")</dd>

                        <!-- Age -->
                        <dt class="col-sm-3">Age</dt>
                        <dd class="col-sm-9">@Model.Resident.Age</dd>

                        <!-- Gender -->
                        <dt class="col-sm-3">Gender</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Resident.Gender)</dd>

                        <!-- Residency Status -->
                        <dt class="col-sm-3">Residency Status</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Resident.ResidencyStatus)</dd>

                        <!-- Senior Citizen Status -->
                        <dt class="col-sm-3">Senior Citizen</dt>
                        <dd class="col-sm-9">
                            @(Model.Resident.IsSeniorCitizen ? "Yes" : "No")
                        </dd>

                        <!-- PWD Status -->
                        <dt class="col-sm-3">PWD</dt>
                        <dd class="col-sm-9">
                            @(Model.Resident.IsPWD ? "Yes" : "No")
                        </dd>

                        <!-- Nationality -->
                        <dt class="col-sm-3">Nationality</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Resident.Nationality)</dd>

                        <!-- Civil Status -->
                        <dt class="col-sm-3">Civil Status</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Resident.CivilStatus)</dd>

                        <!-- Occupation -->
                        <dt class="col-sm-3">Occupation</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Resident.Occupation)</dd>

                        <!-- Voter Status -->
                        <dt class="col-sm-3">Voter Status</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Resident.VoterStatus)</dd>

                        <!-- Date Registered -->
                        <dt class="col-sm-3">Date Registered</dt>
                        <dd class="col-sm-9">@Model.Resident.DateRegistered.ToString("MMMM dd, yyyy")</dd>

                        <!-- Emergency Contact -->
                        <dt class="col-sm-3">Emergency Contact</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Resident.EmergencyContact)</dd>

                        <!-- Health Conditions -->
                        <dt class="col-sm-3">Health Conditions</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Resident.HealthConditions)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Links -->
    <div class="mt-3">
        <a class="btn btn-warning btn-sm" asp-page="./Edit" asp-route-id="@Model.Resident?.ResidentID">Edit</a>
        <a class="btn btn-secondary btn-sm" asp-page="./Index">Back to List</a>
    </div>
</div>
