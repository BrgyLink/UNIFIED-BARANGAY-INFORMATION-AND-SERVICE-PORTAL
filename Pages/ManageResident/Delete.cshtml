@page
@model BrgyLink.Pages.ManageResident.DeleteModel

@{
    ViewData["Title"] = "Delete Resident";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mb-5 text-danger">Delete Resident</h2>

<div class="container">
    <div class="row justify-content-center">
        <!-- Image Column (Left) -->
        <div class="col-12 col-md-4 mb-4">
            <div class="card shadow-sm border-light rounded-3">
                <div class="card-header bg-danger text-white text-center">Resident Photo</div>
                <div class="card-body text-center">
                    @if (Model.Resident.ImageData != null && Model.Resident.ImageData.Length > 0)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Resident.ImageData)" alt="Resident Photo"
                             class="img-fluid mb-3" style="max-width: 180px; max-height: 180px; border-radius: 50%; object-fit: cover;" />
                    }
                    else
                    {
                        <img src="/images/avatarPlaceholder.jpg" alt="Resident Image Placeholder"
                             class="img-fluid mb-3" style="max-width: 180px; max-height: 180px; border-radius: 50%; object-fit: cover;" />
                    }
                </div>
            </div>
        </div>

        <!-- Resident Details Column (Right) -->
        <div class="col-12 col-md-8">
            <div class="card shadow-sm border-light rounded-3 mb-4">
                <div class="card-header bg-danger text-white">Resident Details</div>
                <div class="card-body">
                    <h4>Are you sure you want to delete this Resident?</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">First Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Resident.FirstName)</dd>

                        <dt class="col-sm-4">Middle Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Resident.MiddleName)</dd>

                        <dt class="col-sm-4">Last Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Resident.LastName)</dd>

                        <dt class="col-sm-4">Birthdate:</dt>
                        <dd class="col-sm-8">@Model.Resident.BirthDate.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-4">Gender:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Resident.Gender)</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Resident.Email)</dd>

                        <dt class="col-sm-4">Address:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Resident.Address)</dd>

                        <dt class="col-sm-4">Contact Number:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Resident.ContactNumber)</dd>

                        <dt class="col-sm-4">Emergency Contact:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Resident.EmergencyContact)</dd>
                    </dl>
                </div>
            </div>

            <!-- Delete Confirmation Form -->
            <div class="card shadow-sm border-light rounded-3">
                <div class="card-header bg-danger text-white">Delete Confirmation</div>
                <div class="card-body text-center">
                    <form method="post" id="deleteForm">
                        <input type="hidden" asp-for="Resident.ResidentID" />
                        <div class="d-flex justify-content-center gap-3">
                            <button type="button" id="deleteButton" class="btn btn-danger btn-lg mb-3">Delete</button>
                            <a asp-page="./Index" class="btn btn-outline-secondary btn-lg mb-3">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- SweetAlert2 CDN -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            $("#deleteButton").click(function () {
                // Show SweetAlert for confirmation
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#ccc',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // If confirmed, submit the form
                        $("#deleteForm").submit();
                    }
                });
            });

            // Back to list button click (no change needed)
            $('#backToListBtn').click(function () {
                window.location.href = '/ManageResident/Index'; // Adjust the path if needed
            });
        });
    </script>
}