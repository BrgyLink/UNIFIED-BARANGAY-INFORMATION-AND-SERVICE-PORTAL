@page
@model BrgyLink.Pages.AboutUsModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "About";
}

<div class="container about-container">
    <img src="/images/logoBrgySeal.png" alt="Barangay Logo" class="img-fluid mb-4" style="max-width: 150px;">
    <h2 class="text-white">About Us</h2>
    <p class="text-white mt-3 mb-2">Your local government unit dedicated to serving the residents of our barangay. We strive to improve community welfare, ensure safety, and support local development.</p>

    <div class="row info-section">
        <div class="col-md-4 col-sm-6 mb-4">
            <div class="info-box" style="background-color: #91A7BB;">
                <h5>Community Services</h5>
                <p>We provide a range of services to support residents, including health services, public assistance, and community programs aimed at fostering a safe and supportive environment.</p>
            </div>
        </div>
        <div class="col-md-4 col-sm-6 mb-4">
            <div class="info-box" style="background-color: #91A7BB;">
                <h5>Our Values</h5>
                <p>Our barangay operates with transparency, accountability, and a commitment to serving the community. We value feedback from residents to improve our services.</p>
            </div>
        </div>
        <div class="col-md-4 col-sm-6 mb-4">
            <div class="info-box" style="background-color: #91A7BB;">
                <h5>Citizen Support</h5>
                <p>We are here to address the needs of our residents. Our support services include processing requests, providing information, and ensuring quick responses to concerns.</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-sm-6 mb-4">
            <div class="info-box" style="background-color: #91A7BB;">
                <h5>Barangay Initiatives</h5>
                <p>We initiate projects to improve infrastructure, promote environmental sustainability, and support local livelihoods, all geared towards community growth.</p>
            </div>
        </div>
        <div class="col-md-6 col-sm-6 mb-4">
            <div class="info-box" style="background-color: #91A7BB;">
                <h5>Public Safety and Order</h5>
                <p>Our officials work to maintain peace and order within the barangay. We collaborate with local enforcement to ensure the safety and security of our residents.</p>
            </div>
        </div>
    </div>

    <!-- Barangay Officials Section -->
    <h2 class="text-white mt-5 mb-4">Barangay Officials</h2>
    <div class="row">
        @foreach (var official in Model.BarangayOfficials)
        {
            <div class="col-sm-12 col-md-4 col-lg-3 mb-4">
                <div class="card" style="background-color: #F8F9FA; border: 1px solid #ddd;">
                    @if (official.Photo != null && official.Photo.Length > 0)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(official.Photo)" class="card-img-top d-block mx-auto mt-2" alt="@official.FirstName @official.LastName" style="max-height: 200px; object-fit:contain;">

                    }
                    else
                    {
                        <img src="/images/avatarPlaceholder.jpg" class="card-img-top d-block mx-auto" alt="Default Image" style="max-height: 200px; object-fit: cover;">

                    }
                    <div class="card-body text-center">
                        <h5 class="card-title">@official.FirstName @official.LastName</h5>
                        <p class="card-text">@official.BarangayPosition</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
