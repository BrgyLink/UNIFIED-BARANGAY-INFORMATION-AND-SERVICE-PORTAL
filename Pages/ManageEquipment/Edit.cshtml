@page
@model BrgyLink.Pages.ManageEquipment.EditModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Equipment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Equipment.Id" />
            <div class="form-group">
                <label asp-for="Equipment.FacilityId" class="control-label"></label>
                <select asp-for="Equipment.FacilityId" class="form-control" asp-items="ViewBag.FacilityId"></select>
                <span asp-validation-for="Equipment.FacilityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipment.Name" class="control-label"></label>
                <input asp-for="Equipment.Name" class="form-control" />
                <span asp-validation-for="Equipment.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipment.Description" class="control-label"></label>
                <input asp-for="Equipment.Description" class="form-control" />
                <span asp-validation-for="Equipment.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipment.Quantity" class="control-label"></label>
                <input asp-for="Equipment.Quantity" class="form-control" />
                <span asp-validation-for="Equipment.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipment.Status" class="control-label"></label>
                <input asp-for="Equipment.Status" class="form-control" />
                <span asp-validation-for="Equipment.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipment.LastUpdated" class="control-label"></label>
                <input asp-for="Equipment.LastUpdated" class="form-control" />
                <span asp-validation-for="Equipment.LastUpdated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
